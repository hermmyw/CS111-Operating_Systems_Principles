simpsh:

./simpsh \
--profile \
--rdonly pg98.txt \
--pipe \
--pipe \
--creat --wronly 2sout.txt \
--creat --wronly 2serr.txt  \
--command 0 2 6 cat \
--command 1 4 6 sed 's/we/shoes/g' \
--command 3 5 6 wc -l \
--close 2 \
--close 4 \
--wait

